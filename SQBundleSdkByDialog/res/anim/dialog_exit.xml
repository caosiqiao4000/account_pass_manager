<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 从无到有 -->
    <scale
        android:duration="@dimen/default_anim_time"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0"
        android:toYScale="0" />
    <!-- 透明度:从1到0 -->
    <alpha
        android:duration="@dimen/default_anim_time"
        android:fromAlpha="1"
        android:toAlpha="0" />

</set>