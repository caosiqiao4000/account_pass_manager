<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 对话框样式 -->
    <style name="Dialog" parent="@android:style/Theme.Dialog">

        <!-- 窗口的动画样式 -->
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
        <!-- 不要标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 整个对话框窗口的背景 -->
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>
    <!-- 对话框窗口的动画样式 -->
    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- 文字样式 -->
    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 标题样式 -->
    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_default_style">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">@dimen/bottom_btn_height</item>
        <item name="android:textColor">#0E0E0E</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/operate_bg</item>
        <!-- <item name="android:background">@drawable/qa_actionitem_bg</item> -->
    </style>
    <!-- 按钮样式 -->
    <style name="Dialog_Button">
        <item name="android:background">@drawable/dialog_bg_btn</item>
        <item name="android:textColor">#0E0E0E</item>
    </style>
    <!-- 对话框配置 -->
    <style name="sh_MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/sh_clarity</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/sh_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/sh_dialog_out</item>
    </style>

</resources>